msgid "plugins.themes.portal.name"
msgstr "Tema do portal de periódicos/UERR"

msgid "plugins.themes.portal.description"
msgstr "Este plugin implementa o tema padrão do portal."

msgid "plugins.themes.portal.option.typography.label"
msgstr "Fonte"

msgid "plugins.themes.portal.option.typography.description"
msgstr "Escolha uma combinação de fontes adequada a esta revista."

msgid "plugins.themes.portal.option.typography.notoSans"
msgstr "Noto Sans: Uma fonte digital-nativa projetada pelo Google para suporte extensivo de idiomas."

msgid "plugins.themes.portal.option.typography.notoSerif"
msgstr "Noto Serif: Uma variante serif da fonte digital-nativa do Google."

msgid "plugins.themes.portal.option.typography.notoSerif_notoSans"
msgstr "Noto Serif / Noto Sans: Um complemento com cabeçalhos serif e corpo do texto sem serif."

msgid "plugins.themes.portal.option.typography.notoSans_notoSerif"
msgstr "Noto Serif / Noto Sans: Um complemento com cabeçalhos e corpo do texto sem serif."

msgid "plugins.themes.portal.option.typography.lato"
msgstr "Lato: Uma fonte sem-serif popular e moderna."

msgid "plugins.themes.portal.option.typography.lora"
msgstr "Lora: Uma fonte ampla de serifa boa para ler on-line."

msgid "plugins.themes.portal.option.typography.lora_openSans"
msgstr "Lora / Open Sans: Um complemento com cabeçalhos serif e corpo do texto sem serif."

msgid "plugins.themes.portal.option.colour.label"
msgstr "Cor"

msgid "plugins.themes.portal.option.colour.description"
msgstr "Escolha uma cor para o cabeçalho."

msgid "plugins.themes.portal.option.useHomepageImageAsHeader.option"
msgstr "Mostrar a imagem da página inicial como plano de fundo do cabeçalho."

msgid "plugins.themes.portal.option.useHomepageImageAsHeader.description"
msgstr ""
"Quando uma imagem da página inicial tiver sido carregada, exiba-a no plano "
"de fundo do cabeçalho, em vez da posição usual na página inicial."

msgid "plugins.themes.portal.option.useHomepageImageAsHeader.label"
msgstr "Imagem de fundo do cabeçalho"

msgid "plugins.themes.portal.option.showDescriptionInJournalIndex.option"
msgstr "Exibir o resumo do periódico na página inicial."
